# General Configuration
# The interval (in seconds) for periodic checks
CHECK_INTERVAL=10

# Timeout for connection attempts (in seconds)
TIMEOUT=5

# Host to test connectivity (default is Google's public DNS)
TEST_HOST=8.8.8.8

# Wi-Fi Configuration
# The interface to check for Wi-Fi signal strength (default is wlan0)
WIFI_INTERFACE=wlan0

# Network Traffic Monitoring
# The interval (in seconds) for checking network traffic
TRAFFIC_CHECK_INTERVAL=10

# Logging Configuration
# Log level can be DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Notification Configuration
# Email settings for notifications (if applicable)
EMAIL_NOTIFICATIONS_ENABLED=true
EMAIL_ADDRESS=your_email@example.com
EMAIL_PASSWORD=your_email_password
SMTP_SERVER=smtp.example.com
SMTP_PORT=587

# API Keys (if applicable)
# Example API key for external services
API_KEY=your_api_key_here

# Additional settings can be added as needed
